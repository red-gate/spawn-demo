{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create Spawn Data Containers",
      "command": "source ${workspaceRoot}/.env && source ${workspaceRoot}/spawn.sh && validateImagesExist && setupContainers",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label":  "Build Backend .NET Api",
      "command": "dotnet",
      "args": ["build"],
      "type": "process",
      "presentation": {
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceRoot}/api/Spawn.Demo.WebApi"
      }
    },
    {
      "label": "Install frontend dependencies",
      "command": "yarn",
      "args": ["install"],
      "type": "process",
      "options": {
        "cwd": "${workspaceRoot}/client"
      },
      "presentation": {
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}